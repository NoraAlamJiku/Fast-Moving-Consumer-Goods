@model IEnumerable<FMCGWebApp.ViewModels.CompareOrderandStock>

@{
    ViewBag.Title = "CompareOrderandStock";
    Layout = "~/Views/Shared/_LayoutWhIncharge.cshtml";
}

<h2>Compare Order and Stock</h2>

<div id="page-wrapper">
    <table class="table table-striped table-bordered">
        <tr>
            <th style="text-align: center; color: green">
                @Html.DisplayName("Serial Number")
            </th>
            <th style="text-align: center; color: green">
                @Html.DisplayName("Category Name")
            </th>
            <th style="text-align: center; color: green">
                @Html.DisplayName("Item Name")
            </th>
            <th style="text-align: center; color: green">
                @Html.DisplayNameFor(model => model.Need)
            </th>
            <th style="text-align: center; color: green">
                @Html.DisplayNameFor(model => model.Stock)
            </th>
        </tr>
        <div>
            <h3 style="text-align: center;margin-top: 80px">Compare Order and Stock</h3>
            <hr />
        </div>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center; color: black">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="text-align: center; color: black">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td style="text-align: center; color: black">
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td style="text-align: center; color: black">
                    @Html.DisplayFor(modelItem => item.Need)
                </td>
                <td style="text-align: center; color: black">
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>

            </tr>
        }

    </table>
</div>

